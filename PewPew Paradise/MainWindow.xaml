<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PewPew_Paradise"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="PewPew_Paradise.MainWindow"
        mc:Ignorable="d"
        Title="PewPew Paradise" Height="512" Width="512" KeyDown="KeyPress" KeyUp="KeyLift" SizeToContent="WidthAndHeight" MinWidth="200" MinHeight="220" Background="{DynamicResource BackgroundBrush}" Closed="Window_Closed">

    <Grid x:Name="GameWindow" HorizontalAlignment="Left" Height="512" Margin="0,0,0,0" VerticalAlignment="Top" Width="512" SizeChanged="GameWindow_SizeChanged" UseLayoutRounding="True" RenderOptions.BitmapScalingMode="NearestNeighbor">
        <Grid x:Name="MainMenu" HorizontalAlignment="Left" Height="512" Margin="0,0,0,0" VerticalAlignment="Top" Width="512" Background="#FF260026">
            <Button x:Name="bt_singleplay" HorizontalAlignment="Left" Margin="141,87,0,0" VerticalAlignment="Top" Width="232" Height="64" FontSize="40" FontFamily="Comic Sans MS" BorderBrush="{x:Null}" Template="{DynamicResource ButtonControlTemplate1}" MouseEnter="bt_singleplay_MouseEnter" MouseLeave="bt_singleplay_MouseLeave">
                <Button.Background>
                    <ImageBrush ImageSource="Images/button.png"/>

                </Button.Background>
                <Image Height="54" Width="222" Source="Images/Singleplayer.png"/>
            </Button>
            <Button x:Name="bt_multiplay" HorizontalAlignment="Left" Margin="141,168,0,0" VerticalAlignment="Top" Width="232" Height="64" FontSize="40" FontFamily="Comic Sans MS" BorderBrush="{x:Null}" Template="{DynamicResource ButtonControlTemplate1}" MouseEnter="bt_multiplay_MouseEnter" MouseLeave="bt_multiplay_MouseLeave">
                <Button.Background>
                    <ImageBrush ImageSource="Images/button.png" />

                </Button.Background>
                <Image Height="54" Width="222" Source="Images/Multiplayer.png"/>
            </Button>
            <Button x:Name="bt_options" HorizontalAlignment="Left" Margin="141,249,0,0" VerticalAlignment="Top" Width="232" Height="64" FontSize="40" FontFamily="Comic Sans MS" Click="bt_options_Click" BorderBrush="{x:Null}" Template="{DynamicResource ButtonControlTemplate1}" MouseEnter="bt_options_MouseEnter" MouseLeave="bt_options_MouseLeave">
                <Button.Background>
                    <ImageBrush ImageSource="Images/button.png" />

                </Button.Background>
                <Image Height="54" Width="222" Source="Images/Options.png"/>
            </Button>
            <Button x:Name="bt_help" HorizontalAlignment="Left" Margin="141,330,0,0" VerticalAlignment="Top" Width="232" Height="64" FontSize="40" FontFamily="Comic Sans MS" Click="bt_help_Click" BorderBrush="{x:Null}" Template="{DynamicResource ButtonControlTemplate1}" MouseEnter="bt_help_MouseEnter" MouseLeave="bt_help_MouseLeave">
                <Button.Background>
                    <ImageBrush ImageSource="Images/button.png" />

                </Button.Background>
                <Image Height="54" Width="222" Source="Images/Help.png"/>
            </Button>
            <Button x:Name="bt_exit" HorizontalAlignment="Left" Margin="141,411,0,0" VerticalAlignment="Top" Width="232" Height="64" FontSize="40" FontFamily="Comic Sans MS" Click="bt_exit_Click" BorderBrush="{x:Null}" Template="{DynamicResource ButtonControlTemplate1}" MouseEnter="bt_exit_MouseEnter" MouseLeave="bt_exit_MouseLeave">
                <Button.Background>
                    <ImageBrush ImageSource="Images/button.png" />

                </Button.Background>
                <Image Height="54" Width="222" Source="Images/Exit.png"/>
            </Button>
            <Label x:Name="lb_title" Content="PewPew Paradise" HorizontalAlignment="Center" Margin="45,0,47,440" FontSize="50" FontFamily="Comic Sans MS" Width="420" FontWeight="Bold" Foreground="#7C0476"/>
            <Image x:Name="img_left_arrow" HorizontalAlignment="Left" Height="64" Margin="72,87,0,0" VerticalAlignment="Top" Width="64" Source="arrow_left.png" Visibility="Collapsed">

            </Image>
            <Image x:Name="img_right_arrow" HorizontalAlignment="Left" Height="64" Margin="378,87,0,0" VerticalAlignment="Top" Width="64" Source="Images/arrow_right.png" Visibility="Collapsed">

            </Image>
        </Grid>
        <Grid x:Name="Help" HorizontalAlignment="Left" Height="512" Margin="0,0,0,0" VerticalAlignment="Top" Width="512" Visibility="Collapsed" Background="#FF260026" >
            <Label x:Name="lb_help" Content="Help" HorizontalAlignment="Left" Margin="10,6,0,0" FontSize="60" FontFamily="Comic Sans MS" Foreground="#7C0476"></Label>
            <Label x:Name="lb_rules" Content="Rules" HorizontalAlignment="Left" Margin="39,87,0,0" FontSize="30" FontFamily="Comic Sans MS" Foreground="#7C0476"></Label>
            <Label x:Name="lb_ruletext" Content="Még nem tudni" HorizontalAlignment="Left" Margin="71,132,0,0" FontSize="20" FontFamily="Comic Sans MS" Foreground="#7C0476"></Label>
            <Label x:Name="lb_keys" Content="Keys" HorizontalAlignment="Left" Margin="39,249,0,0" FontSize="30" FontFamily="Comic Sans MS" Foreground="#7C0476"></Label>
            <Label x:Name="lb_player1" Content="Player1" HorizontalAlignment="Left" Margin="43,297,0,0" FontSize="20" FontFamily="Comic Sans MS" Foreground="#7C0476"></Label>
            <Label x:Name="lb_p1keys" Content="Még nem tudni" HorizontalAlignment="Left" Margin="55,328,0,0" FontSize="18" FontFamily="Comic Sans MS" Foreground="#7C0476"></Label>
            <Label x:Name="lb_player2" Content="Player2" HorizontalAlignment="Left" Margin="271,297,0,0" FontSize="20" FontFamily="Comic Sans MS" Foreground="#7C0476"></Label>
            <Label x:Name="lb_p2keys" Content="Még nem tudni" HorizontalAlignment="Left" Margin="279,328,0,0" FontSize="18" FontFamily="Comic Sans MS" Foreground="#7C0476"></Label>
            <Button x:Name="bt_back_help" Content="Back" HorizontalAlignment="Left" Margin="438,436,0,0" VerticalAlignment="Top" Width="50" Height="50" FontSize="20" FontFamily="Comic Sans MS" Click="bt_back_Click"></Button>
        </Grid>
        <Grid x:Name="Options" HorizontalAlignment="Left" Height="512" Margin="0,0,0,0" VerticalAlignment="Top" Width="512" Visibility="Collapsed" Background="#FF260026">
            <Label x:Name="lb_options" Content="Options" HorizontalAlignment="Left" Margin="10,6,0,10" FontSize="60" FontFamily="Comic Sans MS" Foreground="#7C0476"></Label>
            <Label x:Name="lb_audio" Content="Audio" HorizontalAlignment="Left" Margin="70,88,0,0" FontSize="30" FontFamily="Comic Sans MS" Foreground="#7C0476"></Label>
            <Label x:Name="lb_music" Content="Music Volume" HorizontalAlignment="Left" Margin="80,134,0,0" FontSize="20" FontFamily="Comic Sans MS" Foreground="#7C0476"></Label>
            <Label x:Name="lb_effect" Content="Effect Volume" HorizontalAlignment="Left" Margin="80,193,0,0" FontSize="20" FontFamily="Comic Sans MS" Foreground="#7C0476"></Label>
            <Label x:Name="lb_chars" Content="Characters" HorizontalAlignment="Left" Margin="70,257,0,0" FontSize="30" FontFamily="Comic Sans MS" Foreground="#7C0476"></Label>
            <Label x:Name="lb_p1" Content="Player1:" HorizontalAlignment="Left" Margin="80,295,0,0" FontSize="20" FontFamily="Comic Sans MS" Foreground="#7C0476"></Label>
            <Label x:Name="lb_p2" Content="Player2:" HorizontalAlignment="Left" Margin="278,295,0,0" FontSize="20" FontFamily="Comic Sans MS" Foreground="#7C0476"></Label>
            <Button x:Name="bt_back_op" Content="Back" HorizontalAlignment="Left" Margin="438,436,0,0" VerticalAlignment="Top" Width="50" Height="50" FontSize="20" FontFamily="Comic Sans MS" Click="bt_back_Click"></Button>
            <Slider x:Name="sl_music" Margin="80,178,211,319" Width="221" Height="20" Minimum="0" Maximum="100" SmallChange="1" LargeChange="10" Style="{DynamicResource SliderStyle1}"/>
            <Grid Style="{StaticResource ContentRoot}">
                <Slider x:Name="sl_effect" Margin="80,232,211,260" Width="221" Height="20" Minimum="0" Maximum="100" SmallChange="1" LargeChange="10" >
                <Slider.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <ResourceDictionary Source="Dictionary1.xaml"/>
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                </Slider.Resources>
            </Slider>
        </Grid>
    </Grid>



    <Window.Resources>
        <ControlTemplate x:Key="ButtonControlTemplate1" TargetType="{x:Type Button}">
            <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" ContentStringFormat="{TemplateBinding ContentStringFormat}" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsDefaulted" Value="True">
                    <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" TargetName="border" Value="{DynamicResource {x:Static SystemColors.WindowFrameColor }}"/>
                    <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.WindowFrameColor }}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" TargetName="border" Value="{DynamicResource {x:Static SystemColors.WindowFrameColor }}"/>
                    <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.WindowFrameColor }}"/>
                </Trigger>
                <Trigger Property="ToggleButton.IsChecked" Value="True">
                    <Setter Property="Background" TargetName="border" Value="{DynamicResource {x:Static SystemColors.WindowFrameColor }}"/>
                    <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.WindowFrameColor }}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" TargetName="border" Value="{DynamicResource {x:Static SystemColors.WindowFrameColor }}"/>
                    <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.WindowFrameColor }}"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.WindowFrameColor }}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>


</Window>
